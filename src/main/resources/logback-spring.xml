<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <!--    <property name="LOG_FILE" value="${catalina.base}/logs/Diplomado.log"/>-->
    <property name="LOG_FILE" value="./data/logs/Diplomado.log"/>
    <property name="LOG_FILE_MAX_SIZE" value="10MB"/>
    <property name="LOG_FILE_MAX_HISTORY" value="30"/>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
    <include resource="org/springframework/boot/logging/logback/file-appender.xml"/>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
    <springProfile name="dev">
        <logger name="com.alsnor.lends.ulend" level="DEBUG"/>
    </springProfile>
    <springProfile name="prod">
        <logger name="com.alsnor.lends.ulend" level="INFO"/>
    </springProfile>
</configuration>